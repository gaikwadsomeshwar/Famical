                <table class="table">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">Sr No</th>
                      <th scope="col">UserId</th>
                      <th scope="col">Relation</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%
                    if(data4.length>0) {
                      var i=1;
                      data4.forEach(function(data) {
                  %>
                    <tr>
                      <td><%= i %></td>
                      <td><%= data.memberid %></td>
                      <td><% if(data.type=='') { %>
                        <button type="button" class="btn btn-danger mx-1 btn-outline mt-1" data-toggle="modal" data-target="#add-relation" onclick="sendMid(<%=data.memberid%>)">Add Relation</button>
                        <% } else { %>
                        <%= data.type %>
                        <% } %>
                      </td>
                    </tr>
