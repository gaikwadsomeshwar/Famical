            </div>

            <div class="container ">

              <!-- Patients Details -->
              <% if(data5[0].docid.length>0) { %>
              <div class="container my-4 myborder">
                <h3>My Patients</h3>
                <div class="table-responsive">
                  <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">Sr No</th>
                        <th scope="col">Consult Date</th>
                        <th scope="col">Patient Id</th>
                        <th scope="col">Prescription</th>
                        <th scope="col">Medical Test(s)</th>
                        <th scope="col">Diagnosis</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%
                        if(data6.length>0) {
                          var i=1;
                          data6.forEach(function(data) {
                      %>
                      <tr>
                        <td><%= i %></td>
                        <td><%= data.cdate.toISOString().substring(0, 10) %></td>
                        <td><%= data.pid %></td>
                        <td><%= data.prescriptions %></td>
                        <td><%= data.medtests %></td>
                        <td><% if(data.diagnosis=='') { %>
                          <button type="button" class="btn btn-danger mx-1 btn-outline mt-1" data-toggle="modal" data-target="#consult" onclick="sendPid({ pid: <%= data.pid %>, cdate: <%= data.cdate %> })">Consult</button>
